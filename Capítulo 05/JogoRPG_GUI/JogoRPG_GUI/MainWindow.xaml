<Window x:Class="JogoRPG_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JogoRPG_GUI"
        mc:Ignorable="d"
        Title="Dano de Espada" Height="175" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="flamejante" Content="Flamejante" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="Flamejante_Marcado" Unchecked="Flamejante_Desmarcado"/>

        <CheckBox x:Name="magico" Grid.Column="1" Content="Mágico" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="Magico_Marcado" Unchecked="Magico_Desmarcado"/>

        <Button Content="Role os dados para causar dano" Grid.Row="1" Grid.ColumnSpan="2" Margin="20,10" Click="Click_Botao"/>

        <TextBlock x:Name="dano" HorizontalAlignment="Center" Grid.Row="2" Text="dano" VerticalAlignment="Center" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
