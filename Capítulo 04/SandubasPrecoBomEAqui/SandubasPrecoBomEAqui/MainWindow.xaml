<Window x:Class="SandubasPrecoBomEAqui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SandubasPrecoBomEAqui"
        mc:Ignorable="d"
        Title="Bem-vindo à lanchonete Sandubas Preço Bom É Aqui de Sloppy Joe!" Height="350" Width="600">
    <Grid Margin="20,20,20,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="item1" FontSize="18"/>
        <TextBlock x:Name="preco1" Grid.Column="1" FontSize="18" HorizontalAlignment="Right"/>

        <TextBlock x:Name="item2" FontSize="18" Grid.Row="1"/>
        <TextBlock x:Name="preco2" Grid.Column="1" FontSize="18" HorizontalAlignment="Right" Grid.Row="1"/>

        <TextBlock x:Name="item3" FontSize="18" Grid.Row="2"/>
        <TextBlock x:Name="preco3" Grid.Column="1" FontSize="18" HorizontalAlignment="Right" Grid.Row="2"/>

        <TextBlock x:Name="item4" FontSize="18" Grid.Row="3"/>
        <TextBlock x:Name="preco4" Grid.Column="1" FontSize="18" HorizontalAlignment="Right" Grid.Row="3"/>

        <TextBlock x:Name="item5" FontSize="18" Grid.Row="4"/>
        <TextBlock x:Name="preco5" Grid.Column="1" FontSize="18" HorizontalAlignment="Right" Grid.Row="4"/>

        <TextBlock x:Name="item6" FontSize="18" Grid.Row="5"/>
        <TextBlock x:Name="preco6" Grid.Column="1" FontSize="18" HorizontalAlignment="Right" Grid.Row="5"/>

        <TextBlock x:Name="guacamole" HorizontalAlignment="Right" Grid.Row="6" FontSize="18" FontStyle="Italic" Grid.ColumnSpan="2" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
